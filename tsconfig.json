{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "./test",
        "./node_modules/",
        "./dist",
        ".env"
    ]
}
